{
  "name": "@sabaipics/api",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "node scripts/dev-tunnel.js",
    "dev:local": "wrangler dev",
    "build": "tsc",
    "deploy:staging": "wrangler deploy --env staging --minify",
    "deploy:prod": "wrangler deploy --env production --minify",
    "infra:staging": "bash ../../scripts/infra/cloudflare-provision.sh staging",
    "infra:prod": "bash ../../scripts/infra/cloudflare-provision.sh production",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest --config vitest.node.config.ts",
    "test:run": "vitest run --config vitest.node.config.ts && vitest run --config vitest.config.ts",
    "test:workers": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.966.0",
    "@aws-sdk/s3-request-presigner": "^3.966.0",
    "@hono/zod-validator": "^0.7.6",
    "@juit/qrcode": "^1.0.78",
    "@line/bot-sdk": "^10.5.0",
    "@sabaipics/auth": "workspace:*",
    "@sabaipics/db": "workspace:*",
    "@sentry/cloudflare": "^10.38.0",
    "add": "^2.0.6",
    "aws4fetch": "^1.0.20",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "jose": "^6.0.0",
    "littlezipper": "^0.1.5",
    "nanoid": "^5.1.6",
    "neverthrow": "^8.2.0",
    "pnpm": "^10.28.0",
    "stripe": "^20.0.0",
    "svix": "^1.82.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "@types/node": "^22.19.3",
    "aws-sdk-client-mock": "^4.1.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.8.0",
    "vite": "6",
    "vitest": "^3.2.0",
    "wrangler": "4.59.3"
  }
}
